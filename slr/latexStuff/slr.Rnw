out1 <- lm(Horsepower ~ Price, data = Cars93)
Cars93$yHat  <- fitted(out1)
Cars93$yMean <- mean(Cars93$Horsepower)

p <- ggplot(data = Cars93, aes(x = Price, y = Horsepower)) +
    coord_cartesian() +
    theme_classic() +
    theme(text = element_text(size = 16, family = "Courier"))
p1 <- p + geom_point()
p1
